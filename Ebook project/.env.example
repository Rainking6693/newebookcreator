# AI Ebook Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/ai-ebook-platform
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ai-ebook-platform

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For Redis Cloud: redis://username:password@host:port

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================
# Claude API (Primary AI Service)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_API_URL=https://api.anthropic.com

# OpenAI API (Secondary AI Service)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secrets (Generate strong random strings)
JWT_ACCESS_SECRET=your_jwt_access_secret_here_make_it_very_long_and_random
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_make_it_very_long_and_random

# Session Secret
SESSION_SECRET=your_session_secret_here_make_it_very_long_and_random

# Encryption Key (32 characters for AES-256)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# PAYMENT PROCESSING (STRIPE)
# =============================================================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Stripe Price IDs for Subscription Plans
STRIPE_BASIC_MONTHLY_PRICE_ID=price_basic_monthly_id_here
STRIPE_BASIC_YEARLY_PRICE_ID=price_basic_yearly_id_here
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id_here
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id_here
STRIPE_AUTHOR_MONTHLY_PRICE_ID=price_author_monthly_id_here
STRIPE_AUTHOR_YEARLY_PRICE_ID=price_author_yearly_id_here

# =============================================================================
# AWS SERVICES
# =============================================================================
# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# S3 Bucket Names
AWS_S3_CONTENT_BUCKET=ai-ebook-content
AWS_S3_BACKUP_BUCKET=ai-ebook-backups
AWS_S3_EXPORTS_BUCKET=ai-ebook-exports
AWS_S3_ASSETS_BUCKET=ai-ebook-assets

# CloudFront CDN
CLOUDFRONT_DOMAIN=your_cloudfront_domain_here
CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id_here

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@ai-ebook-platform.com
FROM_NAME=AI Ebook Platform

# =============================================================================
# CONTENT SERVICES
# =============================================================================
# Copyscape (Plagiarism Detection)
COPYSCAPE_USERNAME=your_copyscape_username_here
COPYSCAPE_API_KEY=your_copyscape_api_key_here

# Grammarly API (if available)
GRAMMARLY_API_KEY=your_grammarly_api_key_here

# Google Books API
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# =============================================================================
# COMMUNICATION & SUPPORT
# =============================================================================
# Intercom (Customer Support)
INTERCOM_ACCESS_TOKEN=your_intercom_access_token_here

# Slack (Internal Notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_SUPPORT_CHANNEL=#support
SLACK_BETA_INVITE=your_beta_slack_invite_link_here

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token_here

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/ai-ebook-platform-test

# Debug Settings
DEBUG=ai-ebook:*
LOG_LEVEL=info

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Hotjar (User Analytics)
HOTJAR_ID=your_hotjar_id_here

# FullStory (Session Recording)
FULLSTORY_ORG_ID=your_fullstory_org_id_here

# Optimizely (A/B Testing)
OPTIMIZELY_SDK_KEY=your_optimizely_sdk_key_here

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Revenue Sharing
PLATFORM_FEE_PERCENTAGE=30
MINIMUM_PAYOUT_AMOUNT=100

# Usage Limits
BASIC_WORD_LIMIT=75000
PRO_WORD_LIMIT=100000
AUTHOR_WORD_LIMIT=150000

BASIC_AI_GENERATIONS_LIMIT=500
PRO_AI_GENERATIONS_LIMIT=1000
AUTHOR_AI_GENERATIONS_LIMIT=2500

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_BETA_FEATURES=false
ENABLE_COLLABORATION=true
ENABLE_MARKET_RESEARCH=true
ENABLE_REVENUE_SHARING=true
ENABLE_API_ACCESS=false